{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AI-Team Gaps v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "project_code", "baseline", "generated_at", "items"],
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "project_code": { "type": "string", "minLength": 1 },
    "baseline": { "type": "string", "minLength": 1 },
    "generated_at": { "type": "string", "minLength": 1 },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "gap_id",
          "title",
          "summary",
          "observed_evidence",
          "impact",
          "risk_level",
          "recommended_action",
          "target_teams",
          "acceptance_criteria",
          "dependencies",
          "ssot_refs",
          "confidence"
        ],
        "properties": {
          "gap_id": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "summary": { "type": "string", "minLength": 1 },
          "observed_evidence": { "type": "array", "items": { "type": "string", "minLength": 1 } },
          "impact": { "type": "string", "enum": ["low", "medium", "high"] },
          "risk_level": { "type": "string", "enum": ["low", "medium", "high"] },
          "recommended_action": { "type": "string", "minLength": 1 },
          "target_teams": { "type": "array", "items": { "type": "string", "minLength": 1 } },
          "target_repos": { "type": ["array", "null"], "items": { "type": "string", "minLength": 1 } },
          "acceptance_criteria": { "type": "array", "items": { "type": "string", "minLength": 1 } },
          "dependencies": {
            "type": "object",
            "additionalProperties": false,
            "required": ["must_run_after", "can_run_in_parallel_with"],
            "properties": {
              "must_run_after": { "type": "array", "items": { "type": "string" } },
              "can_run_in_parallel_with": { "type": "array", "items": { "type": "string" } }
            }
          },
          "ssot_refs": { "type": "array", "items": { "type": "string", "minLength": 1 } },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      }
    }
  }
}
