{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QA Plan v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "work_id", "repo_id", "team_id", "target_branch", "created_at", "ssot", "derived_from", "tests", "gaps"],
  "properties": {
    "version": { "const": 1 },
    "work_id": { "type": "string", "minLength": 1 },
    "repo_id": { "type": "string", "minLength": 1 },
    "team_id": { "type": "string", "minLength": 1 },
    "target_branch": { "type": "string", "minLength": 1 },
    "created_at": { "type": "string", "minLength": 1 },
    "ssot": {
      "type": "object",
      "additionalProperties": false,
      "required": ["bundle_path", "bundle_hash", "snapshot_sha256"],
      "properties": {
        "bundle_path": { "type": "string", "minLength": 1 },
        "bundle_hash": { "type": "string", "minLength": 1 },
        "snapshot_sha256": { "type": "string", "minLength": 1 }
      }
    },
    "derived_from": {
      "type": "object",
      "additionalProperties": false,
      "required": ["proposal_path", "proposal_sha256", "patch_plan_path", "patch_plan_sha256", "timestamp"],
      "properties": {
        "proposal_path": { "type": "string", "minLength": 1 },
        "proposal_sha256": { "type": "string", "minLength": 1 },
        "patch_plan_path": { "type": "string", "minLength": 1 },
        "patch_plan_sha256": { "type": "string", "minLength": 1 },
        "timestamp": { "type": "string", "minLength": 1 }
      }
    },
    "notes": { "type": "string" },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["test_id", "title", "type", "priority", "acceptance_criteria", "ssot_refs"],
        "properties": {
          "test_id": { "type": "string", "minLength": 1 },
          "title": { "type": "string", "minLength": 1 },
          "type": { "enum": ["unit", "integration", "e2e", "manual"] },
          "priority": { "enum": ["P0", "P1", "P2", "P3"] },
          "acceptance_criteria": { "type": "array", "items": { "type": "string" } },
          "steps": { "type": "array", "items": { "type": "string" } },
          "expected": { "type": "array", "items": { "type": "string" } },
          "files_or_areas": { "type": "array", "items": { "type": "string" } },
          "ssot_refs": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "gaps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["gap_id", "description", "impact", "mitigation", "ssot_refs"],
        "properties": {
          "gap_id": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "impact": { "enum": ["low", "medium", "high"] },
          "mitigation": { "type": "string" },
          "ssot_refs": { "type": "array", "items": { "type": "string" } }
        }
      }
    }
  }
}

