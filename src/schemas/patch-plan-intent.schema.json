{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RepoPatchPlanIntent",
  "type": "object",
  "additionalProperties": false,
  "required": ["intent_summary", "scope", "edits", "commands", "risk", "constraints"],
  "properties": {
    "intent_summary": { "type": "string", "minLength": 1 },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "required": ["allowed_paths"],
      "properties": {
        "allowed_paths": { "type": "array", "minItems": 0, "items": { "type": "string", "minLength": 1 } },
        "forbidden_paths": { "type": "array", "minItems": 0, "items": { "type": "string", "minLength": 1 } },
        "allowed_ops": { "type": "array", "minItems": 0, "items": { "type": "string", "enum": ["edit", "add", "delete"] } }
      }
    },
    "edits": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "op", "rationale", "intent"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "op": { "type": "string", "enum": ["edit", "add", "delete"] },
          "rationale": { "type": "string", "minLength": 1 },
          "intent": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type"],
            "properties": {
              "type": { "type": "string", "enum": ["append_line", "insert_after_match", "replace_first"] },
              "line": { "type": "string" },
              "match": { "type": "string" },
              "replacement": { "type": "string" }
            }
          }
        }
      }
    },
    "commands": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cwd", "package_manager", "install", "lint", "test", "build"],
      "properties": {
        "cwd": { "type": "string", "minLength": 1 },
        "package_manager": { "type": ["string", "null"], "enum": ["npm", "yarn", "pnpm", null] },
        "install": { "type": ["string", "null"] },
        "lint": { "type": ["string", "null"] },
        "test": { "type": ["string", "null"] },
        "build": { "type": ["string", "null"] }
      }
    },
    "risk": {
      "type": "object",
      "additionalProperties": false,
      "required": ["level", "notes"],
      "properties": {
        "level": { "type": "string", "enum": ["low", "normal", "high"] },
        "notes": { "type": "string" }
      }
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["no_branch_create", "requires_training", "hexa_authoring_mode", "blockly_compat_required"],
      "properties": {
        "no_branch_create": { "type": "boolean" },
        "requires_training": { "type": "boolean" },
        "hexa_authoring_mode": { "type": ["string", "null"], "enum": ["recipe", "cooked_code", null] },
        "blockly_compat_required": { "type": ["boolean", "null"] }
      }
    }
  }
}

