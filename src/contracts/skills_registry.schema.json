{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "skills_registry.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "updated_at", "skills"],
  "properties": {
    "version": { "const": 1 },
    "updated_at": { "type": "string", "pattern": "Z$" },
    "skills": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["skill_id", "title", "description", "tags", "path", "status"],
        "properties": {
          "skill_id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9._-]{2,80}$" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "path": { "type": "string", "pattern": "^skills/[a-z0-9][a-z0-9._-]{2,80}/skill\\.md$" },
          "status": { "type": "string", "enum": ["active", "deprecated"] }
        }
      }
    }
  }
}
