{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-team.local/contracts/committee_output.schema.json",
  "title": "Committee Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["scope", "facts", "assumptions", "unknowns", "integration_edges", "risks", "verdict"],
  "properties": {
    "scope": { "type": "string", "pattern": "^(system|repo:[A-Za-z0-9._-]+)$" },
    "stale": { "type": "boolean" },
    "facts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["text", "evidence_refs"],
        "properties": {
          "text": { "type": "string", "minLength": 1 },
          "evidence_refs": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } }
        }
      }
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["text", "evidence_missing"],
        "properties": {
          "text": { "type": "string", "minLength": 1 },
          "evidence_missing": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 12 } }
        }
      }
    },
    "unknowns": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["text", "evidence_missing"],
        "properties": {
          "text": { "type": "string", "minLength": 1 },
          "evidence_missing": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 12 } }
        }
      }
    },
    "integration_edges": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["from", "to", "type", "contract", "confidence", "evidence_refs", "evidence_missing"],
        "properties": {
          "from": { "type": "string", "minLength": 1 },
          "to": { "type": "string", "minLength": 1 },
          "type": { "type": "string", "enum": ["http", "event", "db", "sharedlib"] },
          "contract": { "type": "string", "minLength": 1 },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "evidence_refs": { "type": "array", "items": { "type": "string", "minLength": 1 } },
          "evidence_missing": { "type": "array", "items": { "type": "string", "minLength": 12 } }
        }
      }
    },
    "risks": { "type": "array", "items": { "type": "string", "minLength": 1 } },
    "verdict": { "type": "string", "enum": ["evidence_valid", "evidence_invalid"] }
  },
  "unevaluatedProperties": false
}
