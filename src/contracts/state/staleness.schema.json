{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-team.local/contracts/state/staleness.schema.json",
  "title": "Lane A Staleness Snapshot (ops-only)",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "generated_at", "repos", "system"],
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "generated_at": { "type": "string", "format": "date-time" },
    "repos": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[A-Za-z0-9._-]+$": {
          "type": "object",
          "additionalProperties": false,
          "required": ["stale", "reasons"],
          "properties": {
            "stale": { "type": "boolean" },
            "reasons": { "type": "array", "items": { "type": "string", "minLength": 1 } }
          }
        }
      }
    },
    "system": {
      "type": "object",
      "additionalProperties": false,
      "required": ["stale", "reasons"],
      "properties": {
        "stale": { "type": "boolean" },
        "reasons": { "type": "array", "items": { "type": "string", "minLength": 1 } }
      }
    }
  }
}

