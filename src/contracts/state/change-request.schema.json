{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-team.local/contracts/state/change-request.schema.json",
  "title": "Lane A Knowledge Change Request (ops-only)",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "id", "type", "scope", "title", "body", "severity", "created_at", "status", "linked_meeting_id"],
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "id": { "type": "string", "minLength": 4 },
    "type": { "type": "string", "enum": ["bug", "feature", "question"] },
    "scope": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "body": { "type": "string", "minLength": 1 },
    "severity": { "type": "string", "enum": ["low", "medium", "high"] },
    "created_at": { "type": "string", "format": "date-time" },
    "status": { "type": "string", "enum": ["open", "in_meeting", "processed", "rejected"] },
    "linked_meeting_id": { "type": ["string", "null"] }
  }
}

