{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "skill_package.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "skill_id",
    "title",
    "domain",
    "applies_to",
    "created_at",
    "updated_at",
    "hash",
    "evidence_refs",
    "source_scope",
    "dependencies",
    "author"
  ],
  "properties": {
    "version": { "const": 1 },
    "skill_id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "title": { "type": "string", "minLength": 1 },
    "domain": { "type": "string", "minLength": 1 },
    "applies_to": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^(system|repo:[A-Za-z0-9._-]+|project:[A-Za-z0-9._-]+)$"
      }
    },
    "created_at": { "type": "string", "pattern": "Z$" },
    "updated_at": { "type": "string", "pattern": "Z$" },
    "hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "evidence_refs": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string", "minLength": 1 }
    },
    "source_scope": {
      "type": "string",
      "pattern": "^(system|repo:[A-Za-z0-9._-]+)$"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
      }
    },
    "author": { "const": "skill.author" }
  }
}
