{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ai-team.local/contracts/qa_committee_output.schema.json",
  "title": "QA Committee Output (qa_strategist)",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "role", "scope", "created_at", "risk", "required_invariants", "test_obligations", "facts", "unknowns"],
  "properties": {
    "version": { "type": "integer", "const": 1 },
    "role": { "type": "string", "const": "qa_strategist" },
    "scope": { "type": "string", "pattern": "^(system|repo:[A-Za-z0-9._-]+)$" },
    "created_at": { "type": "string", "format": "date-time" },
    "risk": {
      "type": "object",
      "additionalProperties": false,
      "required": ["level", "notes"],
      "properties": {
        "level": { "type": "string", "enum": ["low", "normal", "high", "unknown"] },
        "notes": { "type": "string" }
      }
    },
    "required_invariants": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "text", "severity", "evidence_refs", "evidence_missing"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "text": { "type": "string", "minLength": 1 },
          "severity": { "type": "string", "enum": ["high", "medium", "low"] },
          "evidence_refs": { "type": "array", "items": { "type": "string", "minLength": 1 } },
          "evidence_missing": { "type": "array", "items": { "type": "string", "minLength": 12 } }
        }
      }
    },
    "test_obligations": {
      "type": "object",
      "additionalProperties": false,
      "required": ["unit", "integration", "e2e"],
      "properties": {
        "unit": {
          "type": "object",
          "additionalProperties": false,
          "required": ["required", "why", "suggested_test_directives", "target_paths"],
          "properties": {
            "required": { "type": "boolean" },
            "why": { "type": "string" },
            "suggested_test_directives": { "type": "array", "items": { "type": "string", "minLength": 1 } },
            "target_paths": { "type": "array", "items": { "type": "string", "minLength": 1 } }
          }
        },
        "integration": {
          "type": "object",
          "additionalProperties": false,
          "required": ["required", "why", "suggested_test_directives", "target_paths"],
          "properties": {
            "required": { "type": "boolean" },
            "why": { "type": "string" },
            "suggested_test_directives": { "type": "array", "items": { "type": "string", "minLength": 1 } },
            "target_paths": { "type": "array", "items": { "type": "string", "minLength": 1 } }
          }
        },
        "e2e": {
          "type": "object",
          "additionalProperties": false,
          "required": ["required", "why", "suggested_test_directives", "target_paths"],
          "properties": {
            "required": { "type": "boolean" },
            "why": { "type": "string" },
            "suggested_test_directives": { "type": "array", "items": { "type": "string", "minLength": 1 } },
            "target_paths": { "type": "array", "items": { "type": "string", "minLength": 1 } }
          }
        }
      }
    },
    "facts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["text", "evidence_refs"],
        "properties": {
          "text": { "type": "string", "minLength": 1 },
          "evidence_refs": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 1 } }
        }
      }
    },
    "unknowns": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["text", "evidence_missing"],
        "properties": {
          "text": { "type": "string", "minLength": 1 },
          "evidence_missing": { "type": "array", "minItems": 1, "items": { "type": "string", "minLength": 12 } }
        }
      }
    }
  },
  "unevaluatedProperties": false
}

